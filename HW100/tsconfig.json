{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "rootDir": "./src/ts",
    "outDir": "./lib/ts",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules", "src/Java", "bin"]
}

